{% extends 'base.html.twig' %}

{% block main %}

    <form name="authenticate" action="{{ path('security_login') }}" method="post" class="bg-light p-5 contact-form">
        <h3 class="mb-4">Login in your Wonderland account !</h3>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" name="_username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="password" name="_password">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        <div class="form-group">
            <input style="margin-right: 2.5em;"  type="submit" value="Login" class="btn btn-primary py-3 px-5">
        </div>
        <div class="form-group">
            <p>Are you haven't Account ? <a href="{{ path('user_register') }}">Register</a></p>
        </div>
        <div class="form-group">
            <a href="{{ path('homepage') }}"><u>Cancel</u></a>
        </div>

    </form>

{% endblock %}