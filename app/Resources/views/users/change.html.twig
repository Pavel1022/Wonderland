{% extends 'base.html.twig' %}

{% block main %}

    <form action="{{ path('change_user_action', {id : user.id}) }}" method="post" class="bg-light p-5 contact-form" enctype="multipart/form-data">
        <h3 class="mb-4" style="text-align: center">Change Password !</h3>
        {% if errors %}
            <div class="alert alert-danger">
                {% for error in errors %}
                    {{ error }}<br>
                {% endfor %}
            </div>
        {% endif %}
        <div class="form-group">
            <input type="password" class="form-control" placeholder="New Password" name="user[firstName]">
        </div>
        <div class="form-group">
            <input style="margin-right: 2.5em;"  type="submit" value="Change" class="btn btn-primary py-3 px-5">
            <a href="{{ path('user_profile') }}"><u>Cancel</u></a>
        </div>
        {{  form_row(form._token) }}
    </form>


{% endblock %}