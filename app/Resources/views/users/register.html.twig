{% extends 'base.html.twig' %}

{% block main %}

            <form action="{{ path('user_register_user') }}" method="post" class="bg-light p-5 contact-form" enctype="multipart/form-data">
                <h3 class="mb-4" style="text-align: center">Create your own Wonderland account !</h3>
                    {% if errors %}
                        <div class="alert alert-danger">
                            {% for error in errors %}
                                {{ error }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Username" name="user[username]">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Your Password" name="user[password][first]">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Confirm Password" name="user[password][second]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your First Name" name="user[firstName]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Last Name" name="user[lastName]">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Your E-mail" name="user[email]">
                </div>
                <div class="form-group">
                    <input type="tel" class="form-control" placeholder="Your Phone Number" name="user[phone]">
                </div>
                <div class="form-group">
                    {{ form_row(form.file) }}
                </div>
                <div class="form-group">
                    <input style="margin-right: 2.5em;"  type="submit" value="Register" class="btn btn-primary py-3 px-5">
                </div>
                <div class="form-group">
                    <p>Already Registered ? <a href="{{ path('security_login') }}">Login</a></p>
                </div>
                <div class="form-group">
                    <a href="{{ path('homepage') }}"><u>Cancel</u></a>
                </div>

                {{  form_row(form._token) }}
            </form>


{% endblock %}