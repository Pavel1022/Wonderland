{% extends 'base.html.twig' %}

{% block main %}

    <form action="{{ path('edit_user_action', {id : user.id}) }}" method="post" class="bg-light p-5 contact-form" enctype="multipart/form-data">
        <h3 class="mb-4" style="text-align: center">Edit your Profile !</h3>
        {% if errors %}
            <div class="alert alert-danger">
                {% for error in errors %}
                    {{ error }}<br>
                {% endfor %}
            </div>
        {% endif %}
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Your First Name" name="user[firstName]" value="{{ user.firstName }}">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Last Name" name="user[lastName]" value="{{ user.lastName }}">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Your E-mail" name="user[email]" value="{{ user.email }}">
        </div>
        <div class="form-group">
            <input type="tel" class="form-control" placeholder="Your Phone Number" name="user[phone]" value="{{ user.phone }}">
        </div>
        <div class="form-group">
            {{ form_row(form.file) }}
        </div>
        <div class="form-group">
            <input style="margin-right: 2.5em;"  type="submit" value="Edit" class="btn btn-primary py-3 px-5">
            <a href="{{ path('user_profile') }}"><u>Cancel</u></a>
        </div>
        {{  form_row(form._token) }}
    </form>


{% endblock %}